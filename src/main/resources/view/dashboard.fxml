<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="353.0" prefWidth="599.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.dashboardController">
    <children>
        <!-- Title -->
        <Label fx:id="titleLabel" alignment="CENTER" layoutX="14.0" layoutY="22.0" prefHeight="50.0" prefWidth="571.0" text="📊 Dashboard">
            <font>
                <Font name="Segoe UI Bold" size="28.0" />
            </font>
            <textFill>
                <Color fx:constant="DARKSLATEBLUE" />
            </textFill>
        </Label>

        <!-- Buttons -->
        <Button fx:id="customerBtn" alignment="CENTER" layoutX="221.0" layoutY="90.0" onAction="#onActionCustomer" prefHeight="25.0" prefWidth="162.0" text="👥 Customer Management" />
        <Button fx:id="itemBtn" alignment="CENTER" layoutX="221.0" layoutY="137.0" onAction="#onActionItem" prefHeight="25.0" prefWidth="162.0" text="📦 Item Management" />
        <Button fx:id="supplierBtn" alignment="CENTER" layoutX="220.0" layoutY="187.0" onAction="#onActionSupplier" prefHeight="25.0" prefWidth="162.0" text="🚚 Supplier Management" />
        <Button fx:id="employeeBtn" alignment="CENTER" layoutX="221.0" layoutY="237.0" onAction="#onActionEmployee" text="🧑‍💼 Employee Management" />
        <Button fx:id="backBtn" layoutX="273.0" layoutY="296.0" onAction="#onActionback" text="← Back" />
    </children>
</AnchorPane>
