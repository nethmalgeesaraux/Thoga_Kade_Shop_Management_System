<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="520.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.loginController">
    <children>
        <!-- Title -->
        <Label alignment="CENTER" layoutX="10.0" layoutY="20.0" prefWidth="500.0" text="Thoga Kade Shop">
            <font>
                <Font name="Segoe UI Bold" size="28.0" />
            </font>
            <textFill>
                <Color fx:constant="DARKSLATEBLUE" />
            </textFill>
        </Label>

        <!-- Welcome Message -->
        <Label alignment="CENTER" layoutX="153.0" layoutY="70.0" prefHeight="19.0" prefWidth="213.0" text="Welcome to our system">
            <font>
                <Font name="Segoe UI" size="16.0" />
            </font>
            <textFill>
                <Color fx:constant="GRAY" />
            </textFill>
        </Label>

        <!-- Username Label -->
        <Label layoutX="150.0" layoutY="130.0" text="Username or Email">
            <font>
                <Font name="Segoe UI" size="14.0" />
            </font>
        </Label>

        <!-- Username Field -->
        <TextField fx:id="usernameField" layoutX="150.0" layoutY="155.0" prefWidth="220.0" promptText="Enter your username or email" />

        <!-- Password Label -->
        <Label layoutX="150.0" layoutY="200.0" text="Password">
            <font>
                <Font name="Segoe UI" size="14.0" />
            </font>
        </Label>

        <!-- Password Field -->
        <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="225.0" prefWidth="220.0" promptText="Enter your password" />

        <!-- Login Button -->
        <Button layoutX="190.0" layoutY="280.0" onAction="#OnAction" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Login" />
    </children>
</AnchorPane>
